{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["esnext", "es2019", "dom"],
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", "example", "doc", "__test__"]
}
